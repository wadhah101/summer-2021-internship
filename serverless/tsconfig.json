{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "module": "CommonJS",
    "checkJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}